<br>

<h2>My task list</h2>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title.capitalize, task %></td>
        <td><%= link_to octicon("pencil", :height => 16,  :class => "right left", :"aria-label" => "edit"), edit_task_path(task) %>
        <%= link_to octicon("trashcan", :height => 16,  :class => "right left", :"aria-label" => "edit"), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary", role: "button" %>
